<%= form_for [@game, @play] do |f| %>

  <%= f.label :date %>
  <%= f.date_field :date, placeholder: "mm/dd/yy" %>

  <%= f.label :image, value: "Image URL" %>
  <%= f.text_field :image, placeholder: "http://" %>

  <%= f.label :num_floors, value: "Number of Floors (1 - 3)" %>
  <%= f.text_field :num_floors %>

  <%= f.label :player_one_character %>
  <%= f.text_field :player_one_character %>

  <%= f.label :player_two_character %>
  <%= f.text_field :player_two_character %>

  <%= f.label :player_three_character %>
  <%= f.text_field :player_three_character %>

  <%= f.label :player_four_character %>
  <%= f.text_field :player_four_character %>

  <%= f.label :loot %>
  <%= f.text_field :loot %>

  <%= f.label :tools %>
  <%= f.text_field :tools %>

  <%= f.label :events %>
  <%= f.text_field :events %>

  <%= f.label :winner, value: "Who won? Enter 'players' or 'game'" %>
  <%= f.text_field :winner %>

  <%= f.submit %>
<% end %>
