<div class="gameplay-info">
  <h3>Game played on <%= @play.date %></h3>
  <h3><%= link_to "Edit this game", edit_game_play_path(@game, @play) %></h3>
</div>

<div class="gameplay-details">
  <p>Number of floors: <%= @play.num_floors %></p>
  <p>Player 1 character: <%= @play.player_one_character %></p>
  <p>Player 2 character: <%= @play.player_two_character %></p>
  <p>Player 3 character: <%= @play.player_three_character %></p>
  <p>Player 4 character: <%= @play.player_four_character %></p>
  <p>Loot scored: <%= @play.loot %></p>
  <p>Tools scored: <%= @play.tools %></p>
  <p>Event cards played: <%= @play.events %></p>
  <p>Winner: <%= @play.winner %></p>
</div>
