<%= form_for [@game], role: "form" do |f| %>

  <div class="form-group">
    <%= f.label :title, class: "control-label col-sm-2"%>
    <div class="col-sm-7">
      <%= f.text_field :title, class: "form-control", value: "Burgle Brothers" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :num_stars, class: "control-label col-sm-2" %>
    <div class="col-sm-7">
    <%= f.text_field :num_stars, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :image, class: "control-label col-sm-2" %>
    <div class="col-sm-7">
    <%= f.text_field :image, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :logo, class: "control-label col-sm-2" %>
    <div class="col-sm-7">
    <%= f.text_field :logo, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :purchase_url, class: "control-label col-sm-2" %>
    <div class="col-sm-7">
      <%= f.text_field :purchase_url, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-2">
    </div>
    <div class="col-sm-7">
      <%= f.submit :Submit, class: 'btn btn-success' %>
    </div>
  </div>

<% end %>
