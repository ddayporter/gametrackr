<%= image_tag @game.logo, class: "game-logo", alt: @game.title %>
<div class="game-info">
  <p class="star-rating">Star rating (out of 5): <%= @game.num_stars %></p>
  <p class="buy-this-link"><%= link_to "Buy this game", @game.purchase_url %></p>
</div>

<div class="action-buttons">
  <h3><%= link_to "Edit #{@game.title} Info", edit_game_path(@game) %></h3>

  <h3><%= link_to "Create New Game Played", new_game_play_path(@game) %></h3>
</div>

<h3><%= @game.title %> games played by date created:</h3>

<% @plays.reverse.each do |play| %>
  <div class="play-tile">
    <%= link_to play.created_at.strftime("%B %d, %Y"), game_play_path(@game.id, play) %>
    <%= image_tag play.image, class: "play-preview-image", alt: "floor layout image" %>
  </div>
<% end %>
